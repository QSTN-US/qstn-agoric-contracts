{
  "name": "dapp-evm",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start:ui": "cd ui && yarn dev",
    "lint": "prettier . --check",
    "lint:fix": "prettier . --write",
    "test": "yarn workspace deploy test && yarn workspace solidity test",
    "lint:types": "yarn workspace deploy lint:types && yarn workspace contract lint:types && yarn workspace solidity lint:types",
    "build:solidity": "cd solidity && yarn build",
    "build": "yarn build:solidity",
    "postinstall": "patch-package"
  },
  "private": true,
  "useWorkspaces": true,
  "workspaces": [
    "contract",
    "deploy",
    "solidity"
  ],
  "resolutions-note": "needed until @agoric/orchestration is available using this",
  "resolutions": {
    "esm": "github:agoric-labs/esm.git#Agoric-built"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "patch-package": "^8.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.5.11"
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "avoid",
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "nohoist": [
    "**/ava",
    "**/ava/**",
    "**/tsx",
    "**/tsx/**",
    "contract/**",
    "contract/**/@endo/**",
    "**/@endo/ses-ava",
    "**/@noble/hashes",
    "**/@noble/hashes/**",
    "**/starshipjs",
    "**/starshipjs/**",
    "**/@agoric/cosmic-proto",
    "**/@agoric/cosmic-proto/**"
  ]
}
