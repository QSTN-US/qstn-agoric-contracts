{
  "name": "deploy",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "agoric": "dev",
    "esbuild": "^0.25.2",
    "execa": "^9.5.2",
    "typescript": "~5.8.2"
  },
  "scripts": {
    "esbuild:contract": "esbuild ../contract/src/qstn.router.js --platform=node --format=esm --bundle --outfile=dist/qstn.router.bundle.js",
    "bundles:local": "agoric run src/init-contract.js --net=devnet --peer=axelar:connection-7:channel-6:uaxl --peer=osmosis:connection-6:channel-5:uosmo --peer=neutron:connection-9:channel-7:untrn",
    "build:contract": "yarn esbuild:contract && yarn bundles:local",
    "build": "yarn build:contract",
    "test": "yarn esbuild:contract && ava",
    "lint:types": "tsc",
    "deploy": "yarn build:contract && runInsideContainer=false planFile=startQstnRouter-plan.json node deploy.js"
  },
  "ava": {
    "extensions": {
      "js": true,
      "ts": "module"
    },
    "files": ["test/**/*.test.*"],
    "nodeArguments": ["--loader=ts-blank-space/register", "--no-warnings"],
    "require": ["@endo/init/debug.js"],
    "timeout": "20m",
    "workerThreads": false
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "@agoric/cosmic-swingset": "dev",
    "@agoric/internal": "^0.4.0-u21.0",
    "@agoric/orchestration": "^0.2.0-u21.0",
    "@agoric/swingset-vat": "dev",
    "@agoric/telemetry": "dev",
    "@agoric/vats": "^0.16.0-u21.0",
    "@agoric/xsnap": "dev",
    "@agoric/zoe": "^0.27.0-u21.0",
    "@endo/errors": "^1.2.10",
    "@endo/far": "^1.1.11",
    "ava": "^5.3.0",
    "node-fetch-cache": "^5.0.2",
    "viem": "^2.28.1"
  }
}
