{
  "name": "deploy",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "@types/tmp": "^0",
    "agoric": "dev",
    "esbuild": "^0.25.2",
    "execa": "^9.5.2",
    "typescript": "~5.8.2"
  },
  "files": [
    "src",
    "bundles",
    "dist"
  ],
  "scripts": {
    "build": "esbuild ../contract/src/qstn.contract.js --bundle --platform=node --format=esm --main-fields=main --outfile=dist/qstn.contract.bundle.js --metafile=dist/qstn.contract.meta.json",
    "deploy:chain-info:devnet": "scripts/deploy-cli.ts tools/chain-info.build.js --net=devnet peer=axelar:connection-19:channel-315:uaxl peer=osmosis:connection-6:channel-5:uosmo peer=neutron:connection-9:channel-7:untrn",
    "deploy:contract:devnet": "yarn build && scripts/deploy-cli.ts src/qstn.build.js --net=devnet",
    "deploy:contract:local": "yarn build && scripts/deploy-cli.ts src/qstn.build.js --net=local",
    "deploy:chain-info:local": "scripts/deploy-cli.ts tools/chain-info.build.js --net=local --title 'Deploy chain info'",
    "docker:make": "docker compose exec agd make -C /workspace/deploy",
    "test": "yarn build && ava",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint:eslint": "yarn run -T eslint .",
    "lint:types": "yarn run -T tsc"
  },
  "ava": {
    "extensions": {
      "js": true,
      "ts": "module"
    },
    "files": [
      "test/**/*.test.*"
    ],
    "nodeArguments": [
      "--loader=ts-blank-space/register",
      "--no-warnings"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "20m",
    "workerThreads": false
  },
  "dependencies": {
    "@agoric/builders": "0.1.1-dev-f96725d.0.f96725d",
    "@agoric/cosmic-swingset": "dev",
    "@agoric/deploy-script-support": "dev",
    "@agoric/ertp": "0.16.3-dev-eef7b69.0.eef7b69",
    "@agoric/fast-usdc": "0.1.1-dev-f96725d.0.f96725d",
    "@agoric/internal": "0.3.3-dev-9cddc44.0.9cddc44",
    "@agoric/orchestration": "^0.2.0-u22.2",
    "@agoric/smart-wallet": "dev",
    "@agoric/swingset-vat": "^0.33.0-u22.2",
    "@agoric/telemetry": "^0.7.0-u22.2",
    "@agoric/vats": "^0.16.0-u22.2",
    "@agoric/xsnap": "^0.15.0-u22.2",
    "@agoric/zoe": "0.27.0-u22.2",
    "@endo/errors": "^1.2.4",
    "@endo/far": "^1.1.4",
    "@endo/marshal": "^1.8.0",
    "@endo/patterns": "^1.7.0",
    "ava": "^5.3.0",
    "bech32": "^2.0.0",
    "node-fetch-cache": "^5.0.2",
    "tmp": "^0.2.5",
    "viem": "^2.28.1"
  }
}
